@model UserManagementApp.ViewModels.LoginViewModel

<h2 style="margin: 1em" >Please, log in to use the app</h2>

<div class="row">
<div class="col-xs-6 d-flex justify-content-center validation" asp-validation-summary="ModelOnly"></div>
<div class="col-xs-6 container d-flex justify-content-center">
    <div class="d-flex justify-content-center">
        <div class="d-flex">
            <div class="card" style="width:40rem">
                <div class="card-body">
                    <form asp-action="Login" asp-controller="Account">
                        <div class="form-group row" style="margin: 1em">
                            <label asp-for="Email" for="Login" class="col-md-4 col-form-label text-md-right">E-Mail</label>
                            <div class="col-md-6" margin: b>
                                <input asp-for="Email" type="text" id="Email" class="form-control" name="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row" style="margin: 1em">
                            <label asp-for="Password" for="password" class="col-md-4 col-form-label text-md-right">Password</label>
                            <div class="col-md-6">
                                <input asp-for="Password" type="password" id="Password" class="form-control" name="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        
                      

                        <div class="col-md-6 offset-md-4">
                            <div class="form-group row" style="margin: 1em">
                                <button type="submit" class="btn btn-primary d-flex justify-content-center">
                                    Log In
                                </button>
                            </div>
                        </div>
                    </form>
                    <div>
                        Don't have an acoount?
                        <a asp-action="Register" asp-controller="Account" class="btn-link">
                            Register
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>